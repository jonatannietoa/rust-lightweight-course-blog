# Database Configuration
DATABASE_URL=mongodb://admin:password123@localhost:27017/rust_ddd_pills

# Alternative connection strings for different environments:
# For development with Docker Compose (recommended):
# DATABASE_URL=mongodb://app_user:app_password@localhost:27017/rust_ddd_pills

# For development with admin user:
# DATABASE_URL=mongodb://admin:password123@localhost:27017/rust_ddd_pills

# For production (replace with your actual credentials and host):
# DATABASE_URL=mongodb://your_user:your_password@your_host:27017/rust_ddd_pills

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Logging Configuration
RUST_LOG=info
# Available levels: error, warn, info, debug, trace
# For more verbose logging during development:
# RUST_LOG=debug,rust_ai_pills_blog=trace

# Application Configuration
APP_NAME=rust_ai_pills_blog
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# MongoDB specific settings
MONGODB_DATABASE_NAME=rust_ddd_pills
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_CONNECTION_TIMEOUT_MS=10000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=30000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_MS=5000
